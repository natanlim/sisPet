<p id="notice"><%= notice %></p>

<h1>Listagem de Pets</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Species</th>
      <th>Breed</th>
      <th>Obs</th>
      <th>Cliente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.species %></td>
        <td><%= pet.breed %></td>
        <td><%= pet.obs %></td>
        <td><%= pet.customer.name%></td>
        <td><%= link_to 'Listar', pet %></td>
        <td><%= link_to 'Editar', edit_pet_path(pet) %></td>
        <td><%= link_to 'Excluir', pet, method: :delete, data: { confirm: 'Deseja Excluir?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Pet', new_pet_path %>
